@model IEnumerable<InventoryMasterNew.Models.ItemDto>

@{
    ViewBag.Title = "List";
}

<h2 style="color: cornflowerblue; text-align: center;">Produce Item List</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
<table class="table" style="background-color: aliceblue">
    <tr style="background-color: black; color: white">
        <th>
            @Html.DisplayNameFor(model => model.AisleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BBD)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AisleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BBD)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
